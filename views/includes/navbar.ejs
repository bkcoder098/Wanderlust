<nav
  class="navbar navbar-expand-md bg-body-light border-bottom sticky-top navbar-custom"
>
  <div class="container-fluid">
    <a class="navbar-brand text-danger" href="/listings">
      <i class="fa-regular fa-compass"></i>&nbsp;<i><b>WL</b></i>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new"><b>Add New Apartment </b> </a>
        <% if (currUser) { %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } else { %>
        <a class="nav-link active" href="/signup"><b>Sign Up? </b></a>
        <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } %> <% if(currUser) { %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <%}%>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const navbar = document.querySelector(".navbar-custom");
    const collapse = document.querySelector("#navbarNavAltMarkup");

    // Add blur effect when menu is shown
    collapse.addEventListener("show.bs.collapse", function () {
      navbar.classList.add("show-blur");
    });

    // Remove blur effect when menu is hidden
    collapse.addEventListener("hidden.bs.collapse", function () {
      navbar.classList.remove("show-blur");
    });
  });
</script>
